generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url  	    = env("DATABASE_URL")
  directUrl = env("DATABASE_URL_UNPOOLED") // Needed for migrations
}

model Restaurant {
  id           String   @id @default(uuid())
  name         String
  description  String   @map("desc")
  rating       Float
  ratingCount  Int      @map("rating_count")
  category     String
  city         String
  images       String[]
  priceRange   String   @map("price_range")
  isFavorite   Boolean  @default(false)
  featured     Json?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@map("restaurants")
}
